#!/bin/bash
if [ $# -eq 0 ]; then
    echo No isthmus folder specified
    exit 1
fi

OPENSIM_DIR=$1
SIMCTL="${OPENSIM_DIR}/bin/simctl"
LOGFILE="${OPENSIM_DIR}/var/log/watchdog.log"
SCREEN="/usr/bin/screen"
START_DELAY=60
SIMAUTO_LOCK="${OPENSIM_DIR}/var/simauto.lock"

cd "${OPENSIM_DIR}/bin"
mkdir -p "${OPENSIM_DIR}/var/log"

do_log() {
    logline="`date` - $1"
    echo $logline >> $LOGFILE
}

if [ -f ${SIMAUTO_LOCK} ]; then
    exit 0
fi

for simulator in ${OPENSIM_DIR}/etc/regions/*; do
    SIM=`basename ${simulator} .ini`
    SCREENRET=`${SCREEN} -ls ${SIM} | grep -P "${SIM}\t"`
    if [ $? -ne 0 ]; then
        if [ -d "${simulator}" ] && [ -x "${simulator}" ]; then
            # Multiple regions within sim intance
	    do_log "[${SIM}] Not online, restarting"
            ${SIMCTL} kill ${SIM}
            sleep 10
            ${SIMCTL} start ${SIM}
        elif [ -f "${simulator}" ] && [ -r "${simulator}" ]; then
            # Single region instance
            do_log "[${SIM}] Not online, restarting"
            ${SIMCTL} kill ${SIM}
            sleep 10
            ${SIMCTL} start ${SIM}
            sleep ${START_DELAY}
        fi
    #else
    #    do_log "[${SIM}] is running OK"
    fi
done;
